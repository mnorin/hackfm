#!/bin/bash
# style.class - TUI text style functions

# Text styles
tui.style.bold(){ printf '\033[1m'; }
tui.style.dim(){ printf '\033[2m'; }
tui.style.italic(){ printf '\033[3m'; }
tui.style.underline(){ printf '\033[4m'; }
tui.style.blink(){ printf '\033[5m'; }
tui.style.reverse(){ printf '\033[7m'; }
tui.style.hidden(){ printf '\033[8m'; }
tui.style.strikethrough(){ printf '\033[9m'; }

# Reset individual styles
tui.style.regular(){ printf '\033[22m'; }  # Turn off bold/dim
tui.style.nobold(){ tui.style.regular; }
tui.style.nodim(){ tui.style.regular; }
tui.style.noitalic(){ printf '\033[23m'; }
tui.style.nounderline(){ printf '\033[24m'; }
tui.style.noblink(){ printf '\033[25m'; }
tui.style.noreverse(){ printf '\033[27m'; }
tui.style.nohidden(){ printf '\033[28m'; }
tui.style.nostrikethrough(){ printf '\033[29m'; }

# Reset all styles and colors
tui.style.reset(){ printf '\033[0m'; }
